{
  "name": "keepass-ng",
  "version": "0.1.0",
  "description": "The next generation KeePass",
  "main": "app/index.js",
  "scripts": {
    "build": "babel -d build/ src/ --source-maps trnpm_package_dependenciesue --copy-files",
    "prestart": "npm run build",
    "start": "electron dist/app/index.js",
    "test": "electron build/spec/index.js",
    "pretest": "npm run hint",
    "hint": "jshint --reporter=node_modules/jshint-stylish --config .jshintrc src/**/*.js",
    "watch:develop": "parallelshell 'npm run build -- -w' 'npm run test -- -w' 'npm run livereload' ",
    "livereload": "live-reload --port 9091 build/",
    "travis-ci": "npm run build && npm run test",
    "dist": "rm -rf dist && cp -R build/ dist && rm -rf dist/spec && cp -r node_modules dist && cp package.json dist",
    "prepackage": "npm run dist && cd dist && npm prune --production",
    "package": "rm -rf out && electron-packager dist Keepass-NG --platform=all --arch=x64 --version=0.35.4 --out=out --asar",
    "postpackage": "cd out; for i in *; do zip -dd -rT $i.zip $i; done"
  },
  "dependencies": {
    "crypto-js": "^3.1.5",
    "electron-prebuilt": "^0.35.0",
    "keepass.io": "^1.1.2",
    "markup-js": "^1.5.21",
    "nconf": "^0.8.2",
    "onceler": "0.0.5"
  },
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-plugin-transform-regenerator": "^6.3.2",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "chai-dom": "^1.4.0",
    "electron-packager": "^5.1.1",
    "glob": "^6.0.1",
    "jscs": "^2.6.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.1.0",
    "live-reload": "^1.1.0",
    "mocha": "^2.3.4",
    "mocha-better-spec-reporter": "^3.0.1",
    "parallelshell": "^2.0.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "private": true
}

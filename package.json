{
  "name": "keepass-ng",
  "version": "0.1.1-alpha",
  "description": "The next generation KeePass",
  "main": "dist/app/index.js",
  "scripts": {
    "build": "babel -d dist/ src/ --source-maps true --copy-files",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "electron dist/spec/index.js",
    "pretest": "npm run hint",
    "hint": "jshint --reporter=node_modules/jshint-stylish --config .jshintrc src/**/*.js",
    "travis-ci": "npm run build && npm run test",
    "watch:develop": "parallelshell 'npm run build -- -w' 'npm run test -- -w' 'npm run livereload' ",
    "livereload": "live-reload --port 9091 dist/"
  },
  "dependencies": {
    "crypto-js": "^3.1.5",
    "electron-prebuilt": "^0.35.0",
    "keepass.io": "^1.1.2",
    "markup-js": "^1.5.21",
    "nconf": "^0.8.2",
    "onceler": "0.0.5"
  },
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-plugin-transform-regenerator": "^6.3.2",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "chai-dom": "^1.4.0",
    "glob": "^6.0.1",
    "jscs": "^2.6.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.1.0",
    "live-reload": "^1.1.0",
    "mocha": "^2.3.4",
    "mocha-better-spec-reporter": "^3.0.1",
    "parallelshell": "^2.0.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "private": true
}
